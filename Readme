# Jenkins CI/CD Pipeline Setup Script (Dockerized Node.js App)
# Author: K. Sethu

# Update and install Docker
sudo apt-get update -y
sudo apt-get install -y ca-certificates curl gnupg lsb-release
sudo mkdir -p /etc/apt/keyrings
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg
echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] \
https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null
sudo apt-get update -y
sudo apt-get install -y docker-ce docker-ce-cli containerd.io docker-compose-plugin
sudo systemctl start docker
sudo systemctl enable docker

# Create a Docker network for Jenkins and app communication
docker network create jenkins-net

# Run Jenkins in Docker with Docker socket mounted
docker run -d \
  --name stupefied_gauss \
  --network jenkins-net \
  -p 8080:8080 -p 50000:50000 \
  -v /var/run/docker.sock:/var/run/docker.sock \
  -v jenkins_home:/var/jenkins_home \
  jenkins/jenkins:lts

# Give Jenkins user access to Docker
sudo usermod -aG docker jenkins
docker restart stupefied_gauss

# Get Jenkins admin password
docker exec -it stupefied_gauss cat /var/jenkins_home/secrets/initialAdminPassword

# Access Jenkins at http://localhost:8080 and complete setup

# Create Jenkinsfile inside your GitHub repo
echo "now copy the jenkins file content and paste it in the pipeline place"

# Once Jenkins pipeline runs successfully, verify running containers
docker ps

# Check logs of your running app container
docker logs Jenkins-demo-container

# Access the running app
echo "App should now be available at: http://localhost:8081"

# Common troubleshooting:
# If permission denied on docker.sock → sudo usermod -aG docker jenkins && docker restart stupefied_gauss
# If app not reachable → Check docker ps and docker logs Jenkins-demo-container
# If docker not found in Jenkins → Ensure -v /var/run/docker.sock:/var/run/docker.sock is in Jenkins run command

echo "Jenkins CI/CD setup complete!"
